<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2022-07-27T21:55:29Z</date>
    <groups>
        <group>
            <name>Templates/Futur-Tech/Applications</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>futur-tech-osync-sysvol</template>
            <name>Template Futur-Tech App Samba Osync-based SysVol replication</name>
            <description>Futur-Tech: https://github.com/Futur-Tech/futur-tech-osync-sysvol</description>
            <groups>
                <group>
                    <name>Templates/Futur-Tech/Applications</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Samba</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Samba DC: has PdcEmulationMasterRole</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>ft-osync-sysvol.hasPdcEmulationMasterRole</key>
                    <delay>1h</delay>
                    <applications>
                        <application>
                            <name>Samba</name>
                        </application>
                    </applications>
                    <valuemap>
                        <name>Generic YesNo</name>
                    </valuemap>
                </item>
                <item>
                    <name>Samba DC: SysVol osync last successful</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>ft-osync-sysvol.success</key>
                    <units>unixtime</units>
                    <applications>
                        <application>
                            <name>Samba</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>IN_RANGE</type>
                            <params>1
                            </params>
                            <error_handler>DISCARD_VALUE</error_handler>
                        </step>
                    </preprocessing>
                </item>
                <item>
                    <name>Samba DC: SysVolCheck successful</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>ft-osync-sysvol.sysvolcheck</key>
                    <delay>1h</delay>
                    <applications>
                        <application>
                            <name>Samba</name>
                        </application>
                    </applications>
                    <valuemap>
                        <name>Generic YesNo</name>
                    </valuemap>
                    <triggers>
                        <trigger>
                            <expression>{last()}=0</expression>
                            <name>SysVolCheck failed</name>
                            <priority>AVERAGE</priority>
                            <description>An error was returned when running&#13;
samba-tool ntacl sysvolcheck</description>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Samba DC: SysVol osync log</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>logrt[/var/log/futur-tech-osync-sysvol.log,,,,skip]</key>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <applications>
                        <application>
                            <name>Samba</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{regexp(&quot;- \(CRITICAL\):&quot;,#1)}=1</expression>
                            <recovery_mode>NONE</recovery_mode>
                            <name>Critical error detected in futur-tech-osync-sysvol.log</name>
                            <opdata>{{ITEM.VALUE}.regsub(&quot;(.*)&quot;, \1)}</opdata>
                            <priority>HIGH</priority>
                            <description>This trigger need to be closed manually.</description>
                            <manual_close>YES</manual_close>
                        </trigger>
                        <trigger>
                            <expression>{regexp(&quot;- \(ERROR\):&quot;,#1)}=1</expression>
                            <recovery_mode>NONE</recovery_mode>
                            <name>Error detected in futur-tech-osync-sysvol.log</name>
                            <opdata>{{ITEM.VALUE}.regsub(&quot;(.*)&quot;, \1)}</opdata>
                            <priority>AVERAGE</priority>
                            <description>This trigger need to be closed manually.</description>
                            <manual_close>YES</manual_close>
                            <dependencies>
                                <dependency>
                                    <name>Critical error detected in futur-tech-osync-sysvol.log</name>
                                    <expression>{futur-tech-osync-sysvol:logrt[/var/log/futur-tech-osync-sysvol.log,,,,skip].regexp(&quot;- \(CRITICAL\):&quot;,#1)}=1</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                        <trigger>
                            <expression>{regexp(&quot;- \(.+\):&quot;,#1)}=1&#13;
and {regexp(&quot;- \(WARN\):&quot;,#1)}=0&#13;
and {regexp(&quot;- \(ERROR\):&quot;,#1)}=0&#13;
and {regexp(&quot;- \(CRITICAL\):&quot;,#1)}=0</expression>
                            <recovery_mode>NONE</recovery_mode>
                            <name>Uncategorised message detected in futur-tech-osync-sysvol.log</name>
                            <opdata>{{ITEM.VALUE}.regsub(&quot;(.*)&quot;, \1)}</opdata>
                            <description>This trigger need to be closed manually.</description>
                        </trigger>
                        <trigger>
                            <expression>{regexp(&quot;- \(WARN\):&quot;,#1)}=1</expression>
                            <recovery_mode>NONE</recovery_mode>
                            <name>Warning detected in futur-tech-osync-sysvol.log</name>
                            <opdata>{{ITEM.VALUE}.regsub(&quot;(.*)&quot;, \1)}</opdata>
                            <priority>WARNING</priority>
                            <description>This trigger need to be closed manually.</description>
                            <manual_close>YES</manual_close>
                            <dependencies>
                                <dependency>
                                    <name>Critical error detected in futur-tech-osync-sysvol.log</name>
                                    <expression>{futur-tech-osync-sysvol:logrt[/var/log/futur-tech-osync-sysvol.log,,,,skip].regexp(&quot;- \(CRITICAL\):&quot;,#1)}=1</expression>
                                </dependency>
                                <dependency>
                                    <name>Error detected in futur-tech-osync-sysvol.log</name>
                                    <expression>{futur-tech-osync-sysvol:logrt[/var/log/futur-tech-osync-sysvol.log,,,,skip].regexp(&quot;- \(ERROR\):&quot;,#1)}=1</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                    </triggers>
                </item>
            </items>
            <macros>
                <macro>
                    <macro>{$OSYNC_SYSVOL.AGE.WARN}</macro>
                    <value>6h</value>
                    <description>Warning max age for latest successful SysVol osync</description>
                </macro>
            </macros>
        </template>
    </templates>
    <triggers>
        <trigger>
            <expression>({futur-tech-osync-sysvol:ft-osync-sysvol.success.now()}-{futur-tech-osync-sysvol:ft-osync-sysvol.success.last()})&gt;{$OSYNC_SYSVOL.AGE.WARN} &#13;
and {futur-tech-osync-sysvol:ft-osync-sysvol.success.last()}&gt;0 &#13;
and {futur-tech-osync-sysvol:ft-osync-sysvol.hasPdcEmulationMasterRole.last()}=1</expression>
            <name>No SysVol replication for more than {$OSYNC_SYSVOL.AGE.WARN}</name>
            <opdata>Last osync: {ITEM.LASTVALUE}</opdata>
            <priority>HIGH</priority>
            <description>Check /var/log/futur-tech-osync-sysvol.log</description>
        </trigger>
    </triggers>
    <value_maps>
        <value_map>
            <name>Generic YesNo</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>No</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>Yes</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
